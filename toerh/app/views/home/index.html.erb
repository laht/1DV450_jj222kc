<div class="jumbotron">
	<h1>Toerh webbapi</h1>

	<% if flash[:notice] %>
		<div class="error">
			<%= flash[:notice] %>
		</div>
	<% end %>

	<% if flash[:key] %>
		<div class="success">
			<h3>Här är din apinyckel, spara undan den på ett säkert ställe:</h3>
			<p><%= flash[:key] %></p>
		</div>
	<% end %>

	<%= form_tag(login_path, method: "post") do %>

		<p> <%= label_tag(:email, "Användarnamn")%> </p>
		<p> <%= email_field_tag(:email) %></p>

		<p> <%= label_tag(:password, "Lösenord") %> </p>
		<p> <%= password_field_tag(:password) %> </p>
		<p> <%= submit_tag("Login") %> </p>

	<% end %>
	<%= link_to "Register", apps_path %>

</div>

